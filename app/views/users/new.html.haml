= bootstrap_form_for @user, url: signup_path, inline_errors: false, html: { id: 'signup', class: 'center-block' } do |f|
  %h2.text-right= t('v.users.new.header')
  = render 'shared/validation_errors', obj: @user
  .row
    = f.text_field :first_name, label: t('v.users.new.fields.first_name'),
      hide_label: true, placeholder: t('v.users.new.fields.first_name'),
      wrapper: { class: 'col-xs-6'}
    = f.text_field :last_name, label: t('v.users.new.fields.last_name'),
      hide_label: true, placeholder: t('v.users.new.fields.last_name'),
      wrapper: { class: 'col-xs-6'}
  .row
    = f.text_field :email, label: t('v.users.new.fields.email'),
      hide_label: true,  placeholder: t('v.users.new.fields.email'),
      wrapper: { class: 'col-xs-12' }
  .row
    = f.password_field :password, label: t('v.users.new.fields.password'),
      hide_label: true, placeholder: t('v.users.new.fields.password'),
      wrapper: { class: 'col-xs-6'}
    = f.password_field :password_confirmation,
      label: t('v.users.new.fields.password_confirmation'), hide_label: true,
      placeholder: t('v.users.new.fields.password_confirmation'),
      wrapper: { class: 'col-xs-6'}
  .row
    .col-xs-12
      = f.form_group do
        = f.submit t('v.users.new.submit_button'), class: 'btn btn-primary'
        %span.text-muted= t('v.users.new.or')
        = link_to t('v.users.new.signin_link'), signin_path