%h1= t('v.users.new.header')

= render 'shared/validation_errors', obj: @user
= form_for @user do |f|
  %div.control-group
    = f.label :name, t('v.users.new.fields.name')
    = f.text_field :name, class: "textfield"
  %div.control-group
    = f.label :email, t('v.users.new.fields.email')
    = f.text_field :email, class: "textfield"
  %div.control-group
    = f.label :password, t('v.users.new.fields.password')
    = f.password_field :password, class: "textfield"
  %div.control-group
    = f.label :password_confirmation, t('v.users.new.fields.password_confirmation')
    = f.password_field :password_confirmation, class: "textfield"
  .center
    = f.submit t('v.users.new.submit_button'), class: "btn"
%p.center= raw t('v.users.new.already_registered?',
  signin_link: link_to(t('v.users.new.signin_link'), signin_path))