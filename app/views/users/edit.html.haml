%h1 Settings

= render 'shared/validation_errors', obj: @user
= form_for @user do |f|
  %div.control-group
    = f.label :name, "Name"
    = f.text_field :name, class: "textfield"
  %div.control-group
    = f.label :email, "Email"
    = f.text_field :email, class: "textfield"
  %div.control-group
    = f.label :password, "Password"
    = f.password_field :password, class: "textfield"
  .center
    = f.submit "Save", class: "btn"