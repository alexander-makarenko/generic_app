.modal.fade#signinModal{ tabindex: -1, role: 'dialog' }
  .vertical-alignment-helper
    .modal-dialog.vertical-align-center
      .modal-content
        .modal-header
          = button_tag(type: 'button', class: 'close', 'data-dismiss': 'modal', 'aria-label': 'Close') do
            %span{ 'aria-hidden': 'true' } &times;
          %h3= t('v.sessions.new.heading')
        = bootstrap_form_tag url: signin_path, html: { id: 'signinForm', remote: true } do |f|
          .modal-body
            = f.text_field :email, label: t('v.sessions.new.fields.email'),
              hide_label: true, placeholder: t('v.sessions.new.fields.email')
            = f.password_field :password, label: t('v.sessions.new.fields.password'),
              hide_label: true, placeholder: t('v.sessions.new.fields.password')
            .clearfix
              .pull-left
                = f.check_box :keep_signed_in, label: t('v.sessions.new.keep_signed_in'), inline: true
              .pull-right
                = link_to t('v.sessions.new.password_reset'), new_password_reset_path
          .modal-footer
            .pull-left
              = link_to t('v.sessions.new.signup_link'), signup_path
            .pull-right        
              = f.primary t('v.sessions.new.submit_button')