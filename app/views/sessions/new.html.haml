= bootstrap_form_tag url: signin_path, html: { id: 'login',
  class: 'center-block' } do |f|
  %h2.text-right= t('v.sessions.new.header')
  = f.text_field :email, label: t('v.sessions.new.fields.email'),
    hide_label: true, placeholder: t('v.sessions.new.fields.email')
  = f.password_field :password, label: t('v.sessions.new.fields.password'),
    hide_label: true, placeholder: t('v.sessions.new.fields.password')
  = f.form_group do
    .clearfix
      .pull-left
        = f.check_box :keep_signed_in, label: t('v.sessions.new.keep_signed_in'),
          inline: true
      .pull-right
        = link_to t('v.sessions.new.forgot?'), new_password_reset_path
  = f.form_group do
    = f.submit t('v.sessions.new.submit_button'), class: 'btn btn-primary'
    %span.text-muted= t('v.sessions.new.or')
    = link_to t('v.sessions.new.signup_link'), signup_path